@model RealEstate_UI.Models.WhoWeAreDetailModels.WhoWeAreModel
<section class="w3l-index3" id="about">
    <div class="midd-w3 pb-5">
        <div class="container pb-lg-5 pb-md-4 pb-2">
            <div class="row">
                <div class="col-lg-5 pr-lg-0">
                    <div class="w3l-left-img">
                    </div>
                </div>
                <div class="col-lg-7 pl-lg-0">
                    <div class="w3l-right-info">
                        @if (@Model.resultWhoWeAreDto is not null)
                        {
                            <h6 class="title-small">@Model.resultWhoWeAreDto.Title</h6>
                            <h3 class="title-big">@Model.resultWhoWeAreDto.SubTitle</h3>
                            <p class="mt-4">@Model.resultWhoWeAreDto.Description1</p>
                            <p class="mt-3">@Model.resultWhoWeAreDto.Description2</p>
                        }
                        
                        <ul class="w3l-right-book w3l-right-book-grid mt-md-5 mt-4">
                            @foreach (var item in Model.resultServicesDtos)
                            {
                                if (item.ServiceStatus)
                                {
                                    <li><span class="fa fa-check" aria-hidden="true"></span>@item.ServiceName</li>
                                }
                            }
                        </ul>
                        <a href="#services" class="btn btn-style btn-primary mt-4">Discover our services</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>