@model UpdateEmployeeDto
@{
    ViewBag.Title = "title";
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Personel Güncelleme Sayfası</h6>
                <form method="post" asp-action="CreateEmployee">
                    <input type="hidden" asp-for="EmployeeID"/>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Name">Personel Adı</label>
                        <input type="text" asp-for="Name" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Surname">Personel Soyadı</label>
                        <input type="text" asp-for="Surname" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Email">Email</label>
                        <input type="email" asp-for="Email" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="telefon" asp-for="Phone">Telefon Numarası (+90 ile başlayan, 13 haneli)</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">+90</span>
                            </div>
                            <input type="tel" class="form-control" asp-for="Phone" pattern="^(\+90\d{10})$" placeholder="Telefon Numarası" required>
                            <!--<input type="tel" class="form-control" id="telefon" name="telefon" asp-for="Phone" pattern="^(\d{10})$" placeholder="Telefon Numarası" required>-->
                        </div>
                        <small class="form-text text-muted">Örnek: +905555555555</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="ImageUrl">Image Url</label>
                        <input type="url" asp-for="ImageUrl" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="EmployeePassword">Password</label>
                        <input type="text" asp-for="EmployeePassword" class="form-control"/>
                    </div>
                    <button class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>