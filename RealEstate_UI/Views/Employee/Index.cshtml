@model ICollection<ResultEmployeeDto>
@{
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Personel Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Personel Adı</th>
                            <th scope="col">Email</th>
                            <th scope="col">Telefon</th>
                            <th scope="col">Durum</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model ?? new List<ResultEmployeeDto>())
                        {
                            <tr>
                                <th scope="row">@item.EmployeeID</th>
                                <td>@item.Name @item.Surname</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>
                                    @{
                                        if (item.Status)
                                        {
                                            <span>"Aktif"</span>
                                        }
                                        else
                                        {
                                            <span>"Pasif"</span>
                                        }
                                    }
                                </td>
                                <td>
                                    <a asp-action="DeleteEmployee" asp-route-id="@item.EmployeeID" class="btn btn-outline-danger">Sil</a>
                                </td>
                                <td>
                                    <a asp-action="UpdateEmployee" asp-route-id="@item.EmployeeID" class="btn btn-outline-success">Güncelle</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                    <a asp-action="CreateEmployee" class="btn btn-outline-info">Personel Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>