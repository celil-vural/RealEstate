@model UpdateCategoryDto
@{
    //ViewBag.Title = "CreateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Kategori Güncelleme Sayfası</h6>
                <form method="post">
                    <input type="hidden" asp-for="CategoryId"/>
                    <label>Kategori Adı</label>
                    <input type="text" asp-for="CategoryName" class="form-control"/>
                    <br/>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="CategoryStatus" checked="@Model.CategoryStatus">
                        <label class="form-check-label" asp-for="CategoryStatus">
                            Kategori Status
                        </label>
                    </div>
                    <br/>
                    <button class="btn btn-primary">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>