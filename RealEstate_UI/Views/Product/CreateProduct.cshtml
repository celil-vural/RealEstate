@model CreateProductDto
@{
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni İlan Ekleme Sayfası</h6>
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Title">İlan Başlığı</label>
                        <input type="text" asp-for="Title" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label asp-for="City">Şehir</label>
                        <input type="text" asp-for="City" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label asp-for="District">İlçe</label>
                        <input type="text" asp-for="District" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ProductCategory">Kategori</label>
                        @Html.DropDownListFor(x => x.ProductCategory, (List<SelectListItem>)ViewBag.CategoryList, "Kategori Seçiniz", new { @class = "form-control" })
                    </div>
                    <div class="mb-3">
                        <label asp-for="Price">Fiyat</label>
                        <input type="text" asp-for="Price" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ProductShowCaseTypeID">Tür</label>
                        @Html.DropDownListFor(x => x.ProductShowCaseTypeID,
                            (List<SelectListItem>)ViewBag.ProductShowCaseTypeList,
                            "Tür Seçiniz", new { @class = "form-control" })
                    </div>
                    <div class="mb-3">
                        <label asp-for="CoverImage">Kapak Fotoğrafı</label>
                        <input type="text" asp-for="CoverImage" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Address">Adres</label>
                        <textarea rows="5" asp-for="Address" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description">Açıklama</label>
                        <textarea rows="5" asp-for="Description" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CoverImage">Kapak Fotoğrafı</label>
                        <input type="text" asp-for="CoverImage" class="form-control"/>
                    </div>

                    <button class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>