@model ICollection<ResultProductWithDetailsDto>

@{
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlan Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">İlan Başlığı</th>
                            <th scope="col">Şehir</th>
                            <th scope="col">İlçe</th>
                            <th scope="col">Kategori</th>
                            <th scope="col">Fiyat</th>
                            <th scope="col">Tür</th>
                            <th scope="col">Durum</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                            <th scope="col">Sitede Gör</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model ?? new List<ResultProductWithDetailsDto>())
                        {
                            <tr>
                                <th scope="row">@item.ProductID</th>
                                <th>@item.Title</th>
                                <td>@item.City</td>
                                <td>@item.District</td>
                                <td>@item.CategoryName</td>
                                <td>@item.Price</td>
                                <td>@item.ProductShowCaseTypeName</td>
                                <td>
                                    @{
                                        if (item.ProductStatus)
                                        {
                                            <span>"Aktif"</span>
                                        }
                                        else
                                        {
                                            <span>"Pasif"</span>
                                        }
                                    }
                                </td>
                                <td>
                                    <a asp-action="DeleteProduct" asp-route-id="@item.ProductID" class="btn btn-outline-danger">Sil</a>
                                </td>
                                <td>
                                    <a asp-action="UpdateProduct" asp-route-id="@item.ProductID" class="btn btn-outline-success">Güncelle</a>
                                </td>
                                <td>
                                    <a asp-action="ProductDetail" class="btn btn-outline-primary">Sitede Gör</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                    <a asp-action="CreateProduct" class="btn btn-outline-info">İlan Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>